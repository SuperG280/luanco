<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_view_gasto_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView_new_gasto_title2"
        app:layout_constraintTop_toBottomOf="@+id/textView_new_gasto_title2"
        app:srcCompat="@drawable/cat_agua_grande" />

    <TextView
        android:id="@+id/textView_view_gasto_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="21/02/2019"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_view_gasto_categoria"
        app:layout_constraintEnd_toEndOf="@+id/textView_new_gasto_title2"
        app:layout_constraintTop_toTopOf="@+id/imageView_view_gasto_categoria" />

    <TextView
        android:id="@+id/textView_view_gasto_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Comunidad de vecinos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_view_gasto_fecha"
        app:layout_constraintStart_toStartOf="@+id/imageView_view_gasto_categoria"
        app:layout_constraintTop_toBottomOf="@+id/imageView_view_gasto_categoria" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_new_gasto_importe"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_view_gasto_importe"
        app:layout_constraintStart_toStartOf="@+id/textView_view_gasto_descripcion"
        app:layout_constraintTop_toTopOf="@+id/textView_view_gasto_importe" />

    <TextView
        android:id="@+id/textView_view_gasto_importe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="256,78â‚¬"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_view_gasto_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/textView_view_gasto_descripcion" />

    <TextView
        android:id="@+id/textView_new_gasto_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif"
        android:text="@string/app_view_gasto_tittle"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>